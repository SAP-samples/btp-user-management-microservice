{
    "name": "user-mngr-mtx",
    "version": "1.0.0",
    "description": "BTP user management microservice for any generic multi-tenant application.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap-cloud-sdk/http-client": "^2.7.1",
        "@sap/cds": "^6.7.2",
        "@sap/xsenv": "^3",
        "@sap/xssec": "^3.2.13",
        "express": "^4",
        "passport": "^0.6.0",
        "@sap/cds-mtxs": "^1.1",
        "cfenv": "^1",
        "debug": "^4.3",
        "sqlite3": "^5.0.11"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.102.4",
        "rimraf": "^3.0.2"
    },
    "engines": {
        "node": "^16.15.0",
        "npm": "^8.5.5"
    },
    "scripts": {
        "start": "cds serve",
        "watch-user-mngr": "cds watch --open user-mngr/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy user-mngr --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "auth": {
                "[production]": {
                    "strategy": "JWT"
                },
                "[development]": {
                    "strategy": "mock",
                    "users": {
                        "john": {
                            "roles": [
                                "UserAdmin",
                                "internal-user"
                            ],
                            "tenant": "t1"
                        }
                    }
                }
            },
            "db": {
                "[production]": {
                    "kind": "sqlite",
                    "model": [
                        "db",
                        "srv"
                    ],
                    "credentials": {
                        "database": ":memory:"
                    }
                },
                "[development]": {
                    "kind": "sqlite",
                    "model": [
                        "db",
                        "srv"
                    ],
                    "credentials": {
                        "database": ":memory:"
                    }
                }
            },
            "xsuaa-api": {
                "kind": "rest",
                "credentials": {
                    "destination": "xsuaa-api"
                }
            },
            "xsuaa-bind": {
                "kind": "rest",
                "credentials": {
                    "url": "<from XSUAA service binding>",
                    "forwardAuthToken": true
                }
            },
            "uaa": {
                "kind": "xsuaa"
            },
            "multitenancy": true,
            "toggles": false,
            "extensibility": false
        }
    },
    "features": {
        "fiori_preview": false,
        "in_memory_db": true
    },
    "sapux": [
        "app/user-mngr"
    ]
}